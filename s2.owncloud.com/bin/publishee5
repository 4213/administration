#!/bin/sh
#
# Maintained at: https://github.com/owncloud/administration/tree/master/s2.owncloud.com/bin
#
# jw, Wed Aug 20 11:20:57 EDT 2014
#   changed destination from repositories/ to repositories/5.0/

# copy the build repos to a temporary space
major=5
rm -rf /tmp/ee$major
mkdir /tmp/ee6$major

cp -a /srv/obs/repos/ee\:/$major.0/* /tmp/ee$major

# ...and fix the baseurl string in the repo files.
find /tmp/ee$major -name "*repo" | xargs sed -i 's#repositories/ee:#repositories#'

# finally rsync to download server
rsync -rzv --delete /tmp/ee$major/* root@download.owncloud.com:/srv/www/htdocs/download/repositories/$major.0 

# ... and remove the tmp
rm -rf /tmp/ee$major

echo Download url: http://download.owncloud.com/download/repositories/$major.0 
# end.

